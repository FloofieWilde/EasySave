<Window x:Class="EasySave_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave_2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#FF10100F">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" MinHeight="100" MaxHeight="150"/>
            <RowDefinition Height="4*" MinHeight="80" MaxHeight="130"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Center" Height="auto" Width="auto" VerticalAlignment="Center" Source="/logo.png" OpacityMask="#FF040418"/>

        <Grid Margin="0,5,0,10" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Height="auto" Width="auto" Background="#FF450046" Margin="4">
                <Image Source="/copy-icon.png" Height="auto" Width="auto" Margin="10,10"/>
            </Button>

            <Button Grid.Column="1" Height="auto" Width="auto" Background="#FF450046" Margin="4">
                <Image Source="/settings-logo.png" Height="auto" Width="auto" Margin="10,10"/>
            </Button>

            <Button Grid.Column="2" Height="auto" Width="auto" Background="#FF450046" Margin="4">
                <Image Source="/copy-icon.png" Height="auto" Width="auto" Margin="10,10"/>
            </Button>
        </Grid>
        <Button Name="ExitButton" Click="ExitApp" ClickMode="Release" HorizontalAlignment="Right" VerticalAlignment="Top" Background="#00DDDDDD" BorderBrush="#00DDDDDD" Margin="5">
            <Image Source="/exit-logo.png" Height="60" Width="60"/>
        </Button>

        <Grid Grid.Row="2">

        </Grid>

    </Grid>
</Window>
